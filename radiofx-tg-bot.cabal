category:            Web
build-type:          Simple
extra-source-files:  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/aleksxor/radiofx-tg-bot.hs.git
                     
library
  exposed-modules:   RadioFX.Bot
                   , RadioFX.API
                   , RadioFX.Request
                   , RadioFX.Types
                   , RadioFX.Handler.Shared
                   , RadioFX.Handler.UserMode
                   , RadioFX.Handler.StationMode
  other-modules:     Paths_radiofx_tg_bot
  hs-source-dirs:    src
  build-depends:     base >= 4.7 && < 5
                   , telegram-bot-simple
                   , text
                   , http-client
                   , http-conduit
                   , bytestring
                   , lens
                   , lens-aeson
                   , mtl
                   , split
  ghc-options:       -Wall -Wcompat -Wincomplete-record-updates -Wincomplete-uni-patterns -Wredundant-constraints
  default-language:  Haskell2010
                     
executable radiofx-tg-bot
  main-is:           Main.hs
  other-modules:     Paths_radiofx_tg_bot
  -- other-extensions:
  build-depends:     base
                   , radiofx-tg-bot
                   , telegram-bot-simple
                   , text
  hs-source-dirs:    .
  ghc-options:       -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:  Haskell2010
